# Instagram Credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Schedule (24h format, e.g. "09:00")
DAILY_SCHEDULE_TIME=09:00

# Batch sizes
UNFOLLOW_BATCH_SIZE=100
FOLLOW_BATCH_SIZE=100

# Rate limiting (seconds)
UNFOLLOW_DELAY_MIN=25
UNFOLLOW_DELAY_MAX=45
FOLLOW_DELAY_MIN=30
FOLLOW_DELAY_MAX=60
COOLDOWN_MINUTES_MIN=30
COOLDOWN_MINUTES_MAX=60

# Approval timeout (hours)
APPROVAL_TIMEOUT_HOURS=4

# Discovery settings
DISCOVERY_MIN_FOLLOWERS=0
DISCOVERY_MAX_FOLLOWERS=2000
DISCOVERY_MIN_FOLLOWING=3000
DISCOVERY_ACTIVITY_DAYS=7

# Database
DATABASE_URL=sqlite:///./followflow.db
